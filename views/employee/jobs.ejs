<%- include('partials/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="all-jobs gap-20 bg-gray-400 space-y-5 p-3">
      <% if(alljobs.length == 0) { %>
  <div class="flex items-center justify-center h-[80vh] bg-gradient-to-b from-gray-100 to-white">
    <div class="text-center p-10 rounded-xl shadow-lg bg-white border border-red-200 animate-pulse">
      <h1 class="text-[40px] font-bold text-red-500 mb-4 font-serif">
        ðŸš« Currently No Job Posted
      </h1>
      <p class="text-gray-600 text-lg">Please check back later or post a new job if you're an employer.</p>
    </div>
  </div>
<% } %>

      <% alljobs.forEach(function(job){ %>
    <div class="main-content flex items-align-center bg-white m-[20px] rounded shadow justify-between w-[70%] place-self-center  p-5 gap-6">
        <div class="job-detail flex flex-col text-[20px]">
        <div><strong>Job Title :</strong><%= job.title %></div>
        <div><strong>Company Name:</strong> <a href="/employee/companydetail/<%= job.postedBy %> " class="text-blue-400"><%= job.companyname %> </a></div> 
        <div><strong>Description :</strong><% job.description.forEach(function(desc){%>
            <li><%= desc %> </li>
            <% }) %>
        </div>
        <div><strong>Education :</strong><%= job.education %></div>
        <div><strong>Skills :</strong><%= job.skills %></div>
        <div><strong>Vacancy :</strong><%= job.vacancy %></div>
        <div><strong>Average Salary :</strong><%= job.salary %></div>
        <div><strong>Last Date To Apply :</strong><%= job.lastDate.toDateString() %></div>
        </div>
        <div class="apply-now place-self-center">
          <form action="/employee/applyjob/<%= job._id %>" method="GET">
        <button type="submit" class="cursor-pointer rounded bg-blue-400 text-[20px] font-bold hover:bg-blue-300 p-2 ">Apply Now</button>
        </form>
    </div>
    </div>
    <% }) %>
    
    </div>
</body>
</html>