<%- include('partials/header.ejs') %>
<% if(jobs.length >0) { %>
  <div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold text-green-600 mb-6 text-center"><%= message %></h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% jobs.forEach(function(job){ %>
        <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-5 transition hover:shadow-xl">
          <h2 class="text-xl font-semibold text-indigo-700 mb-2"><%= job.firstname + " " + job.lastname %></h2>
          <p class="text-gray-700"><span class="font-semibold">Job Title:</span> <%= job.job_title %></p>
          <p class="text-gray-700"><span class="font-semibold">Applied On:</span> <%= job.application_date.toDateString() %></p>
          <p class="text-gray-700">
            <span class="font-semibold">Status:</span> 
            <span class="<%= job.status === 'Pending' ? 'text-yellow-500' : job.status === 'Approved' ? 'text-green-600' : 'text-red-600' %>">
              <%= job.status %>
            </span>
          </p>
        </div>
      <% }) %>
    </div>
  </div>
<% } else { %>

  <div class="text-center py-30">
    <h2 class="text-xl font-semibold text-red-600">Currently No Job Applied</h2>
    <h2 class="text-xl font-semibold text-red-400">Please Visit Job to apply for the job</h2>
  </div>
<% } %>
