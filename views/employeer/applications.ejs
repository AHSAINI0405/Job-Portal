<%- include('partials/header.ejs') %>

<h1 class="text-3xl font-bold text-center mb-6 text-blue-800">Job Applications</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-6">
  <% if (app && app.length > 0) { %>
    <% app.forEach(function(A) { %>
      <div class="bg-white shadow-md rounded-lg p-5 border border-gray-200 space-y-3">
        <h2 class="text-xl font-semibold text-indigo-700"><%= A.firstname %> <%= A.lastname %></h2>
        <p class="text-gray-700"><strong>Email:</strong> <%= A.email %></p>
        <p class="text-gray-700"><strong>Job Title:</strong> <%= A.job_title %></p>
        <p class="text-gray-700"><strong>City:</strong> <%= A.city %></p>
        <p class="text-gray-700"><strong>Experience:</strong> <%= A.experience %></p>
        <p class="text-gray-700"><strong>Profession:</strong> <%= A.currentprof %></p>
        <p class="text-gray-700"><strong>Application Date:</strong> <%= A.application_date.toDateString() %></p>
      
        <div>
          <strong>Skills:</strong>
          <ul class="list-disc ml-6 text-sm text-gray-600">
            <% A.skills.forEach(function(s) { %>
              <li><%= s %></li>
            <% }) %>
          </ul>
        </div>
        <a href="/uploads/resumes/<%= A.resume %>" class="bg-blue-100 text-blue-700 p-1">View Resume</a>
        <div class="flex items-center justify-between mt-4">
          <span class="text-sm font-medium">Status: 
            <span class="px-2 py-1 rounded 
              <% if (A.status === 'Approved') { %> bg-green-100 text-green-700 
              <% } else if (A.status === 'Rejected') { %> bg-red-100 text-red-700 
              <% } else { %> bg-yellow-100 text-yellow-700 <% } %>">
              <%= A.status %>
            </span>
          </span>

          <!-- Approve & Reject buttons -->
          <form action="/employeer/update-status/<%= A._id %>" method="POST" class="flex gap-2">
            <button type="submit" name="status" value="Approved"
              class="bg-green-500 hover:bg-green-600 text-white text-sm px-3 py-1 rounded">
              Approve
            </button>
            <button type="submit" name="status" value="Rejected"
              class="bg-red-500 hover:bg-red-600 text-white text-sm px-3 py-1 rounded">
              Reject
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-span-full text-center text-gray-500">No applications found.</div>
  <% } %>
</div>
