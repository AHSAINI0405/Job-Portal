<%- include('partials/header') %>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>

  <% if (success) { %>
    <p class="text-[30px] text-green-500"><%= message %></p>
  
    <% }else if (!success) { %>
    <p class="text-[30px] text-red-800"><%= message %></p>
  
    <%} else { %>
    <p class="text-[30px] text-green-500">Something Went Wrong</p>
  <% } %>
  
  
    <form method="POST" action="/newJob" class="mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 w-full max-w-xl space-y-6 text-[18px]">
  
  <!-- Form Title -->
  <h2 class="text-center text-3xl font-bold text-violet-700 mb-6">Post a New Job</h2>

  <!-- Job Title -->
  <div>
    <label for="job_title" class="block text-gray-700 font-semibold mb-1">Job Title</label>
    <input type="text" name="title" id="job_title"
           class="w-full border-2 border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-400"
           placeholder="Enter job title" required>
  </div>

  <!-- Job Description -->
  <div>
    <label for="job_desc" class="block text-gray-700 font-semibold mb-1">Job Description</label>
    <textarea name="description" id="job_desc"
              class="w-full border-2 border-gray-300 p-3 rounded-md h-24 resize-none focus:outline-none focus:ring-2 focus:ring-violet-400"
              placeholder="Enter job description" required></textarea>
  </div>

  <!-- Education -->
  <div>
    <label for="education" class="block text-gray-700 font-semibold mb-1">Education</label>
    <textarea name="education" id="education"
              class="w-full border-2 border-gray-300 p-3 rounded-md h-20 resize-none focus:outline-none focus:ring-2 focus:ring-violet-400"
              placeholder="Required education" required></textarea>
  </div>
<label for="skills" class="block text-gray-700 font-semibold mb-1">Skills</label>
    <textarea name="skills" id="skills"class="w-full border-2 border-gray-300 p-3 rounded-md h-20 resize-none focus:outline-none focus:ring-2 focus:ring-violet-400"
              placeholder="Skills" required></textarea>
  </div>
  <!-- Vacancy -->
  <div>
    <label for="vacancy" class="block text-gray-700 font-semibold mb-1">Vacancy</label>
    <input type="number" name="vacancy" id="vacancy"
           class="w-full border-2 border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-400"
           placeholder="Number of vacancies" required>
  </div>
<!-- Salary -->
  <div>
    <label for="job_sal" class="block text-gray-700 font-semibold mb-1">Salary </label>
    <input type="text" name="salary" id="job_sal"
              class="w-full border-2 border-gray-300 p-3 rounded-md h-24 resize-none focus:outline-none focus:ring-2 focus:ring-violet-400"
              placeholder="Enter job Salary" required>
  </div>
  <!-- Last Date -->
  <div>
    <label for="last_date" class="block text-gray-700 font-semibold mb-1">Last Date</label>
    <input type="date" name="lastDate" id="last_date"
           class="w-full border-2 border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-400"
           required>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <button type="submit"
            class="w-full bg-violet-600 hover:bg-violet-700 text-white font-semibold py-3 rounded-md text-xl transition duration-200">
      Submit
    </button>
  </div>

</form>

</body>
</html>